{
  "name": "i18n-translation-manager",
  "version": "2.0.0",
  "type": "module",
  "description": "Universal automated translation management tool for i18n projects with dynamic language detection - works with Vue.js, React, Angular, Node.js, and any framework using JSON locale files",
  "main": "index.js",
  "bin": {
    "i18n-translate": "bin/cli.js"
  },
  "scripts": {
    "start": "node bin/cli.js",
    "dev": "node --watch bin/cli.js",
    "server": "node bin/cli.js server 3000",
    "server:dev": "node --watch bin/cli.js server 3000",
    "test": "node --test",
    "test:watch": "node --test --watch",
    "lint": "echo 'Add ESLint here'",
    "format": "echo 'Add Prettier here'",
    "build": "echo 'Build process if needed'",
    "prepublishOnly": "npm test && echo 'Publishing i18n-translation-manager...'"
  },
  "keywords": [
    "i18n",
    "translation",
    "vue",
    "react",
    "angular",
    "next.js",
    "nuxt",
    "svelte",
    "node.js",
    "google-translate",
    "automation",
    "locales",
    "internationalization",
    "framework-agnostic"
  ],
  "author": "ajith438@gmail.com",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^3.3.2",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajithsimon/i18n-translation-manager.git"
  },
  "files": [
    "bin/",
    "lib/",
    "web/",
    "index.js",
    "README.md"
  ]
}
